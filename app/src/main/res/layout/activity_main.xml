<?xml version="1.0" encoding="utf-8"?>
<!-- Initial screen when the user first loads the app -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/theme">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to 'Guess The Player'!"
        android:textSize="@dimen/standard_header_size"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="@dimen/standard_top_margin"/>
    <Button
        android:id="@+id/start_game_button"
        android:layout_marginTop="@dimen/standard_header2_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Start Game"
        android:clickable="true"
        android:focusable="true"/>
    <ImageView
        android:id="@+id/start_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/extreme_top_margin"/>
</LinearLayout>