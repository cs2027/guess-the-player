<?xml version="1.0" encoding="utf-8"?>
<!-- Activity where the user enter his/her desired quiz parameters -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameSetupActivity"
    android:background="@color/theme">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To get started, please specify what players you would like to be quizzed on."
        android:textSize="@dimen/standard_header2_size"
        android:gravity="center"
        android:layout_marginTop="@dimen/standard_top_margin"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_top_margin"
        android:text="Only quiz me about players with the following stats:"
        android:textSize="@dimen/standard_text_size"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/points_header"
        android:textSize="@dimen/standard_text_size"
        android:layout_marginLeft="@dimen/standard_side_margin"
        android:layout_marginRight="@dimen/standard_side_margin"
        android:layout_marginTop="@dimen/large_top_margin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <EditText
            android:id="@+id/min_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standard_text_size"
            android:hint="Points (Min)"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standard_text_size"
            android:text="to"
            android:layout_marginLeft="@dimen/standard_side_margin"
            android:layout_marginRight="@dimen/standard_side_margin"/>
        <EditText
            android:id="@+id/max_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standard_text_size"
            android:hint="Points (Max)"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="@dimen/standard_header2_size"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/standard_top_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/assists_header"
        android:layout_marginLeft="@dimen/standard_side_margin"
        android:layout_marginRight="@dimen/standard_side_margin"
        android:textSize="@dimen/standard_text_size" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <EditText
            android:id="@+id/min_assists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standard_text_size"
            android:hint="Assists (Min)"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standard_text_size"
            android:text="to"
            android:layout_marginLeft="@dimen/standard_side_margin"
            android:layout_marginRight="@dimen/standard_side_margin"/>
        <EditText
            android:id="@+id/max_assists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standard_text_size"
            android:hint="Assists (Max)"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="@dimen/standard_header2_size"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/standard_top_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rebounds_header"
        android:layout_marginLeft="@dimen/standard_side_margin"
        android:layout_marginRight="@dimen/standard_side_margin"
        android:textSize="@dimen/standard_text_size" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <EditText
            android:id="@+id/min_rebounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standard_text_size"
            android:hint="Rebounds (Min)"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standard_text_size"
            android:text="to"
            android:layout_marginLeft="@dimen/standard_side_margin"
            android:layout_marginRight="@dimen/standard_side_margin"/>
        <EditText
            android:id="@+id/max_rebounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standard_text_size"
            android:hint="Rebounds (Max)"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_top_margin"
        android:layout_marginLeft="@dimen/standard_side_margin"
        android:layout_marginRight="@dimen/standard_side_margin"
        android:text="@string/num_questions"
        android:textSize="@dimen/standard_text_size"/>
    <EditText
        android:id="@+id/num_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/standard_text_size"
        android:layout_marginTop="@dimen/standard_top_margin"
        android:layout_gravity="center"
        android:hint="# of Questions"/>
    <Button
        android:id="@+id/load_quiz_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load My Quiz!"
        android:layout_marginLeft="@dimen/standard_side_margin"
        android:layout_marginRight="@dimen/standard_side_margin"
        android:layout_marginTop="@dimen/large_top_margin"
        android:clickable="true"
        android:focusable="true"/>
</LinearLayout>