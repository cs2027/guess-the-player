<?xml version="1.0" encoding="utf-8"?>
<!-- Activity to display the actual quiz questions, along with some hints -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameActivity"
    android:background="@color/theme">
   <TextView
       android:id="@+id/current_score"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="top|right"
       android:layout_marginTop="@dimen/standard_top_margin"
       android:layout_marginRight="@dimen/standard_side_margin"
       android:textSize="@dimen/standard_header2_size"/>
    <TextView
        android:id="@+id/question_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/standard_top_margin"
        android:textSize="@dimen/large_header_size"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statline_header"
        android:layout_marginTop="@dimen/standard_top_margin"
        android:layout_marginLeft="@dimen/standard_side_margin"
        android:layout_marginRight="@dimen/standard_side_margin"
        android:textSize="@dimen/standard_header2_size"/>
    <TextView
        android:id="@+id/statline_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_top_margin"
        android:layout_marginLeft="@dimen/standard_side_margin"
        android:layout_marginRight="@dimen/standard_side_margin"
        android:textSize="@dimen/standard_header2_size"/>
    <TextView
        android:id="@+id/statline_assists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_top_margin"
        android:layout_marginLeft="@dimen/standard_side_margin"
        android:layout_marginRight="@dimen/standard_side_margin"
        android:textSize="@dimen/standard_header2_size"/>
    <TextView
        android:id="@+id/statline_rebounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_top_margin"
        android:layout_marginLeft="@dimen/standard_side_margin"
        android:layout_marginRight="@dimen/standard_side_margin"
        android:textSize="@dimen/standard_header2_size"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_top_margin"
        android:text="First Name"
        android:layout_marginLeft="@dimen/standard_side_margin"
        android:layout_marginRight="@dimen/standard_side_margin"
        android:textSize="@dimen/standard_header2_size"/>
    <EditText
        android:id="@+id/first_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard_side_margin"
        android:layout_marginRight="@dimen/standard_side_margin"
        android:textSize="@dimen/standard_text_size"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_top_margin"
        android:text="Last Name"
        android:layout_marginLeft="@dimen/standard_side_margin"
        android:layout_marginRight="@dimen/standard_side_margin"
        android:textSize="@dimen/standard_header2_size"/>
    <EditText
        android:id="@+id/last_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard_side_margin"
        android:layout_marginRight="@dimen/standard_side_margin"
        android:textSize="@dimen/standard_text_size"/>
    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_top_margin"
        android:layout_marginLeft="@dimen/standard_side_margin"
        android:layout_marginRight="@dimen/standard_side_margin"
        android:text="Submit Answer"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/large_top_margin"
        android:layout_marginLeft="@dimen/standard_side_margin"
        android:layout_marginRight="@dimen/standard_side_margin">
        <Button
            android:id="@+id/hint_one_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hint 1"/>
        <Button
            android:id="@+id/hint_two_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_side_margin"
            android:layout_marginRight="@dimen/standard_side_margin"
            android:text="Hint 2"/>
        <Button
            android:id="@+id/give_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Give Up"/>
    </LinearLayout>
</LinearLayout>