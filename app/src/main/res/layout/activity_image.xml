<?xml version="1.0" encoding="utf-8"?>
<!-- Displays a layout related to the current player in the quiz (player's team logo & colors) -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ImageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_top_section">
        <ImageView
            android:id="@+id/past_player_team_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="@dimen/large_top_margin"
            android:layout_marginBottom="@dimen/large_top_margin"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout_bottom_section">
        <TextView
            android:id="@+id/player_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/standard_header_size"
            android:layout_marginTop="@dimen/extreme_top_margin"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/player_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/standard_header_size"
            android:layout_marginTop="@dimen/standard_top_margin"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/continue_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/extreme_top_margin"
            android:layout_marginRight="@dimen/standard_side_margin"/>
    </LinearLayout>
</LinearLayout>