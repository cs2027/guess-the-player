<?xml version="1.0" encoding="utf-8"?>
<!-- End screen once the quiz is completed -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FinishGameActivity"
    android:background="@color/theme">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/large_header_size"
        android:layout_marginTop="@dimen/standard_top_margin"
        android:text="Your Score:"/>
    <TextView
        android:id="@+id/final_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/standard_top_margin"
        android:textSize="@dimen/large_header_size"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/standard_header2_size"
        android:layout_marginTop="@dimen/standard_top_margin"
        android:layout_marginRight="@dimen/standard_side_margin"
        android:layout_marginLeft="@dimen/standard_side_margin"
        android:text="Congrats on finishing the game! Click the button below to play again."/>
    <Button
        android:id="@+id/new_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_top_margin"
        android:layout_gravity="center"
        android:text="Start New Game"/>
    <ImageView
        android:id="@+id/finish_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="@dimen/large_top_margin"
        android:layout_gravity="center"/>
</LinearLayout>